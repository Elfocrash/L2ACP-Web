            <div id="renamePlayer" class="widget navy-bg p-lg text-center">
                <div class="m-b-md">
                    <i class="fa fa-shopping-cart fa-2x"></i>
                    <div class="font-bold no-margins" style="font-size: 14px;">
                        <div>@Model.FirstOrDefault(x => x.ServiceId == 1).ServiceName</div>
                        <div>@Model.FirstOrDefault(x => x.ServiceId == 1).Price Donate Points</div>
                    </div>
                </div>
            </div>
        </div>

