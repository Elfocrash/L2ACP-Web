@using L2ACP.Models
@using L2ACP.Services
@inject AssetManager AssetManager
@model DonateService[]
<div class="wrapper wrapper-content animated fadeIn">

    @if (Model.FirstOrDefault(x => x.ServiceId == 1).Price >= 0) //Rename player
